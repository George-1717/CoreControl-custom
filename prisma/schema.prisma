generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model application {
  id            Int       @id @default(autoincrement())
  name          String
  description   String?
  icon          String
  publicURL     String
  localURL      String?
  createdAt     DateTime  @default(now())
}

model server {
  id            Int       @id @default(autoincrement())
  name          String
  os            String?
  ip            String?
  url           String?
}